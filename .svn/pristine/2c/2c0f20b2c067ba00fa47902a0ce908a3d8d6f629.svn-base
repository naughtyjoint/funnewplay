function cut_str($str,$len) {    
     $j=strlen($str)/2-2;
  $m="";
  for($i=1;$i<=$j;$i++){$m=$m."*";}
  $n = 0;    
     $tempstr = '';    
    for ($i=0; $i<$len; $i++) {    
        if (ord(substr($str,$n,1)) > 224) {    
             $tempstr .= substr($str,$n,3);    
            $n += 3;    
             $i++;    
        } elseif (ord(substr($str,$n,1)) > 192) {    
             $tempstr .= substr($str,$n,2);    
            $n += 2;    
            $i++;   
        } else {    
            $tempstr .= substr($str,$n,1);    
             $n ++;    
        }    
    }       
    return $tempstr.$m;    
 }   

