/*元素定義*/
a:active, a:visited, a:link{
	text-decoration: none;
}
body{
	position: relative;
}
ul{
	padding: 0;
}
::-webkit-input-placeholder { /* WebKit browsers */
    color:    #FFF;
    padding-left: 10px;
}
:-moz-placeholder { /* Mozilla Firefox 4 to 18 */
   color:    #FFF;
   padding-left: 10px;
   opacity:  1;
}
::-moz-placeholder { /* Mozilla Firefox 19+ */
   color:    #FFF;
   padding-left: 10px;
   opacity:  1;
}
:-ms-input-placeholder { /* Internet Explorer 10+ */
   color:    #FFF;
   padding-left: 10px;
}

/*素材*/
.headbox{
	border-right: 1px solid rgba(0,0,0,.5);
	border-left: 1px solid rgba(0,0,0,.5);
	border-bottom: 1px solid rgba(0,0,0,.5);
	border-top: 20px solid #6d5c6a;
	border-radius: 5px;
	margin-bottom: 60px;
}

.card{
	background-color: white;
	box-shadow: 0px 5px 15px rgba(0,0,0,.3);
	margin: 0 20px;
}
.optionStyle1{
  background: transparent;
  width: 70%;
  height: 40px;
  border: 1px solid #ccc;
  border-radius: 0;
  -webkit-appearance: none;
}
.labelStyle1{
	width: 60px;
	color: white;
	background-color: rgba(0,0,0,.6);
	text-align: center;
  border-radius: 5px;
  font-size: .8em;
  height: 20px;
  line-height: 20px;
}

/*客制*/
.mainnav{
	position: relative;
	top: 0;
	left: 0;
	line-height: 90px;
	height: 90px;
	&_left{
		float: left;
		a{margin-right: 2em;}
	}
	&_right{
		float: right;
	}
	&_search{
		&_input{
		height: 35px;
	  border-top: 0;
  	border-left: 0;
  	border-right: 0;
	  position: relative;
  	width: 230px;
  	border-bottom: 2px solid rgba(0,0,0,0.2);
  	line-height: 40px;
		}
	}
}

.maincontainer{
	position: relative;
	&_banners{
		height: 500px;
		background: url('../images/index/banner.png');
		background-size: cover;
		position: relative;
		&_banner{
			&_des1{
				height: 100%;
				background-color: rgba(243,168,143,.6);
				width: 12%;
				position: absolute;
				left: 0;
				top: 0;
				padding-left: 30px;
				padding-top: 50px;
				color: white;
				text-align: center;
				h3{
				-webkit-writing-mode: vertical-lr;
				text-align: center;
				}
				h4{
					position: relative;
  				top: 30px;
  				left: -15px;
  				font-size: 1.5em;
				}
			}
			&_des2{
				height: 100%;
				background-color: rgba(140,130,178,.6);
				width: 12%;
				position: absolute;
				left: 12%;
				top: 0;
				padding-left: 30px;
				padding-top: 50px;
				color: white;
				text-align: center;
				h3{
				-webkit-writing-mode: vertical-lr;
				text-align: center;
				}
				h4{
					position: relative;
  				top: 30px;
  				left: -15px;
  				font-size: 1.5em;
				}
			}
			&_text{
				position: absolute;
				right: 40px;
				bottom: 4%;
				color: white;
				font-size: 1.5em;
			}
			&_inputs{
				position: absolute;
			  bottom: 10%;
			  width: 100%;
			  text-align: center;
			  .searchBtn{
			  	width: 35px;
				  height: 35px;
				  background: rgb(129, 129, 129);
				  border: 0;
			  }
			  &_inputdiv{
			  	display: inline;
			  	margin-right: 1%;
			  	height: 35px;
			  	input{
			  		background-color: rgba(255,255,255,.5);
			  		border: 0;
			  		height: 35px;
			  		width: 15%;
			  	}
			  }
			}
		}
	}
	&_socialnetworks{
		height: 80px;
		line-height: 80px;
		text-align: center;
		li{
			display: inline;
			text-decoration: none;
			margin-right: 10px;
		}
	}
	&_productcontainer{
		padding: 0 0 40px 0;
		&_selector{
			height: 80px;
			line-height: 80px;
			background-color: #ededed;
			padding-left: 2.5%;
			a{
				font-weight: 600;
				font-size: 1.3em;
				color: gray;
				margin-right: 22px;
			}
			a.active{
				color: #4C4327;
			}
		}
		&_products{
			background-color: #ededed;
			a{color: rgb(95,95,95);}
			&_product{
				.product_container{
					border-radius: 2px;
				}
				margin-bottom: 40px;
				&_img img{
					width: 100%;
				}
				&_content{
					padding: 10px 10px 30px 10px;
					&_left{
						line-height: 12px;
					}
					&_right{
						float: right;
						position: relative;
						bottom: 90px;
						right: 30px;
						color: rgb(44, 154, 194);
						font-size: 1.2em;
						top: -65px;
 						left: -15px;
					}
				}
			}
		}
	}
	&_searchbox{
		margin-top: 75px;
		&_1{
			height: 220px;
			padding: 20px;
			&_items{
				float: left;
				width: 40%;
				&_item{
					margin-bottom: 15px;
				}
			}
		}
		&_1:before{
			content: "找場地";
		  position: absolute;
		  top: -61px;
		  background-color: #6d5c6a;
		  color: white;
		  left: -1px;
		  font-size: 1.2em;
		  padding-right: 26px;
		  padding-bottom: 18px;
		  padding-left: 20px;
		  padding-top: 9px;
		  border-radius: 10px;
		}
		&_1:after{
			content: '';
		  position: absolute;
		  z-index: 1;
		  bottom: 211px;
		  left: 86px;
		  width: 1em;
		  background: #6D5C6A;
		  transform: skew(10deg);
		  border-radius: 0 10px 0 0;
		  height: 49px;
		}
		&_2{
			height: 220px;
			float: right;
		}
		&_2:before{
			content: "已看過的商品";
		  position: absolute;
		  top: -45px;
		  background-color: #6d5c6a;
		  color: white;
		  left: -1px;
		  font-size: 1.2em;
		  padding-right: 26px;
		  padding-bottom: 10px;
		  padding-left: 20px;
		  padding-top: 9px;
		  border-radius: 10px;
		}
		&_3{
			height: 150px;
			&_toptext{
				position: absolute;
				top: -40px;
				left: -60px;
			}
		}
		&_3:before{
			content: "搜尋結果";
		  position: absolute;
		  top: -45px;
		  background-color: #6d5c6a;
		  color: white;
		  left: -1px;
		  font-size: 1.2em;
		  padding-right: 26px;
		  padding-bottom: 10px;
		  padding-left: 20px;
		  padding-top: 9px;
		  border-radius: 10px;
		}
	}
	&_list{
		position: relative;
		&_checkbox{

		}
		&_list{
			background-color: #ededed;
			border-bottom: 0;
			border-left: 0;
			border-right: 0;
			&_item{
				margin-left: auto;
				margin-right: auto;
				height: 230px;
				margin-top: 40px;
				margin-bottom: 40px;
				width: 95%;
			}
		}
		&_list:before{
			content: "列表";
		  position: absolute;
		  top: -45px;
		  background-color: #6d5c6a;
		  color: white;
		  left: 0px;
		  font-size: 1.2em;
		  padding-right: 26px;
		  padding-bottom: 10px;
		  padding-left: 20px;
		  padding-top: 9px;
		  border-radius: 10px;
		}
	}
}
.footer{	
	position: relative;
	background-color: rgba(0,0,0,.8);
	height: 100px;
	line-height: 100px;
	color: gray;
	&_anchors{
		margin: 0;
		padding: 0;
		a{
			color: rgba(255,255,255,.9);
		}
		li{
			display: inline;
			text-decoration: none;
			font-size: 1.2em;
			margin-right: 1em;
		}
		.right{
			float: right;
		}
	}
	&_right{
		float: right;
	}
}